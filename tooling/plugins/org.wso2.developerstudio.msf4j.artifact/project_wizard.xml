<wizard>
    <projectOptions title="MSF4J Project Creation Options"
                    description="Select how would you like to create your new project"
                    error="Please select a method to create the project">
        <option id="new.MSF4J" default="true">Create New MSF4J Project Using Swagger</option>
    </projectOptions>

    <projectOptionSettings>
        <settings optionId="new.MSF4J" title="MSF4J Project"
                  description="Create New MSF4J Project Using Swagger" error="Please give a name to the project">
            <data modelProperty="project.name" type="string"
                  fieldController="org.wso2.developerstudio.msf4j.artifact.validators.MSF4JArtifactFieldController">Project Name</data>
            <data group="paramGroup" modelProperty="swagger.file" type="file"
                  filter="*.json"
                  fieldController="org.wso2.developerstudio.msf4j.artifact.validators.MSF4JArtifactFieldController">Swagger File</data>
            <data modelProperty="service.class.package.name" type="string"
                  fieldController="org.wso2.developerstudio.msf4j.artifact.validators.MSF4JArtifactFieldController"
                  group="paramGroup">Package Name</data>
            <group id="paramGroup"/>
            <projectNatures>
                <nature>org.eclipse.jdt.core.javanature</nature>
            </projectNatures>
        </settings>
    </projectOptionSettings>
</wizard>